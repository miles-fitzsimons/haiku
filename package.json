{
  "name": "haiku",
  "version": "1.0.0",
  "description": "haiku group project",
  "main": "index.js",
  "scripts": {
    "start": "budo . -d --serve bundle.js --live",
    "build": "browserify . -o bundle.js -g uglifyify",
    "test": "browserify test.js | node | tap-spec",
    "dist": "mkdir -p dist && bash -c 'cp *.{js,html,css} dist'",
    "push": "gh-pages -d dist",
    "deploy": "npm run build && npm run dist && npm run push"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/miles-fitzsimons/haiku"
  },
  "author": "miles-fitzsimons",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/miles-fitzsimons/haiku/issues"
  },
  "homepage": "https://github.com/miles-fitzsimons/haiku",
  "dependencies": {
    "dotenv": "^2.0.0",
    "knex": "^0.11.7",
    "pg": "^6.0.1",
    "retext": "^3.0.0",
    "retext-syllable": "^1.0.0",
    "sqlite3": "^3.1.4",
    "unist-util-inspect": "^4.0.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "budo": "^8.2.0",
    "gh-pages": "^0.11.0",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.5.1",
    "uglifyify": "^3.0.1",
    "watchify": "^3.7.0"
  }
}
